{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["workspace"],
  "properties": {
    "workspace": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 1,
          "maxLength": 63
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        }
      }
    },
    "state": {
      "type": "object",
      "properties": {
        "running": {
          "type": "boolean"
        }
      }
    }
  }
}
