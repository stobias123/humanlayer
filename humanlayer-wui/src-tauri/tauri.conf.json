{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CodeLayer",
  "version": "0.1.0",
  "identifier": "dev.humanlayer.wui",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CodeLayer",
        "width": 1440,
        "height": 900,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "zoomHotkeysEnabled": true,
        "titleBarStyle": "Transparent",
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["bin/hld", "bin/humanlayer"],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "utils",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "category": "Utility",
    "shortDescription": "Desktop application for HumanLayer AI approvals"
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
